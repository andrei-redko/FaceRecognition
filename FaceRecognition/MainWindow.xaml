<Window x:Class="FaceRecognition.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="1200" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.35*" MinWidth="420"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="0.65*" />
        </Grid.ColumnDefinitions>

        <GridSplitter Grid.Column="1" ShowsPreview="False" Width="3" HorizontalAlignment="Center" VerticalAlignment="Stretch" />
        <TabControl Grid.Column="2">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Новый пользователь">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Image Name="CameraImage" Grid.Column="0"/>
        <Button Grid.Column="0" Content="Стоп" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Name="ButtonStart" Click="ButtonStart_OnClickuttonStart_Click"/>

    </Grid>
</Window>
